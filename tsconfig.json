{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2019",                                 

    /* Modules */
    "module": "commonjs",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            

    /* Type Checking */
    "strict": true,                                      
    "skipLibCheck": true                              
  },
  "include": [
    "src/**/*"
  ]
}
